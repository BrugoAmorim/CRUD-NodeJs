<div class="container">
    
    <div class="titulo">
        <h1>Editar informações:</h1>
    </div>

    {{#each data}}
        <form action="/salvaredicao/{{dataValues.id}}?_method=PUT" method="post" class="formulario border border-3">
            
            <div class="valor">
                <label class="lead" for="inpnome">Nome: </label>
                <input name="inpnome" class="form-control" type="text" value={{dataValues.nome}}>
            </div>

            <div class="valor">
                <label class="lead" for="inpsobrenome">Sobrenome: </label>
                <input name="inpsobrenome" class="form-control" type="text" value={{dataValues.sobrenome}}>
            </div>

            <div class="valor">
                <label class="lead" for="inpcpf">Cpf: </label>
                <input name="inpcpf" class="form-control" type="text" value={{dataValues.cpf}}>
            </div>

            <div class="valor">
                <label class="lead"
                 for="inprg">Rg: </label>
                <input name="inprg" class="form-control" type="text" value={{dataValues.rg}}>
            </div>

            <div class="eventos">
                <button class="btn btn-success">Salvar</button>
                <a href="/" class="btn btn-outline-dark" >Voltar</a>
            </div>
        </form>
    {{/each}}
</div>

<style>

    body{
        background-color: royalblue;
    }

    .container{
        height: 100%;
        background-color: white;

        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
    }

    .titulo{
        height: 10%;
        text-align: center;
    }

    .formulario{
        height: 70%;
        width: 35%;

        border-radius: 6px;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: space-evenly;
    }    

    .valor{
        height: auto;
        width: 95%;
        margin: 1%;
        padding: 1%;
        
        display: flex;
        flex-direction: column;
        justify-content: center;
    }

    .eventos{
        height: 20%;
        width: 90%;
        margin: 1%;
        
        display: flex;
        flex-direction: row;
        align-items: center;
        justify-content: space-evenly;
    }
</style>